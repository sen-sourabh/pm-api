{
  "name": "pm-api",
  "version": "0.0.1",
  "description": "",
  "author": "vault",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "vault:doc": "npx @compodoc/compodoc -p tsconfig.json -s -w",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "entity:create": "npx typeorm entity:create",
    "migrate:run": "npx ts-node ./node_modules/typeorm/cli.js migration:run --dataSource dist/configs/typeorm/",
    "migrate:revert": "npx ts-node ./node_modules/typeorm/cli.js migration:revert --dataSource dist/configs/typeorm/",
    "manual:migrate:create": "npx typeorm migration:create src/database/migrations/",
    "migrate:create": "migrate-create.sh",
    "migrate:cache:clean": "npx typeorm cache:clear --dataSource dist/configs/typeorm/",
    "migrate:db:sync": "npx typeorm schema:sync --dataSource dist/configs/typeorm/",
    "migrate:log": "npx typeorm schema:log --dataSource dist/configs/typeorm/",
    "init:vault": "npm ci && npm run build && npm run migrate:run && npm run start:dev",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.620.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "@types/aws-sdk": "^0.0.42",
    "aws-sdk": "^2.1664.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "husky": "^9.0.11",
    "lodash": "^4.17.21",
    "lru-cache": "^10.3.1",
    "mysql2": "^3.9.7",
    "nodemailer": "^6.9.13",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.5.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.24",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.7",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
